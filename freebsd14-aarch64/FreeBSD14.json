{
  "variables": {
    "version": "{{env `VERSION`}}"
  },
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "sudo {{.Vars}} sh {{.Path}}",
      "scripts": [
        "scripts/vagrant.sh",
        "scripts/vmtools.sh",
        "scripts/cleanup.sh",
        "scripts/zerodisk.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "INSANEWORKS-FreeBSD-14-aarch64-{{user `version`}}-{{.Provider}}.box",
      "vagrantfile_template": "Vagrantfile.rb"
    }
  ],
  "builders": [
    {
      "type": "parallels-iso",
      "iso_url": "https://download.freebsd.org/releases/arm64/aarch64/ISO-IMAGES/14.0/FreeBSD-14.0-RELEASE-arm64-aarch64-bootonly.iso",
      "iso_checksum": "7088fa8303a5acba33655fc3b7ffcf7c70560353f723eaae8518c5ce08a27ba807b9e475fd55e9601b5b10161faa792289551821c644f8cb85b8cde758e58edf",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_timeout": "10m",
      "boot_command": [
        "<enter><wait10><wait10><tab><enter><wait>mkdir /tmp/etc && mount -t unionfs /tmp/etc /etc && rm /etc/resolv.conf && dhclient vtnet0 && fetch -o /tmp/fetch.sh http://{{.HTTPIP}}:{{.HTTPPort}}/fetch.sh && sh /tmp/fetch.sh && fetch -o /tmp/bsdinstallscript http://{{.HTTPIP}}:{{.HTTPPort}}/bsdinstallscript && bsdinstall script /tmp/bsdinstallscript<enter>"
      ],
      "shutdown_command": "sudo /sbin/halt -p",
      "disk_size": "100000",
      "guest_os_type": "other",
      "http_directory": "http",
      "parallels_tools_mode": "disable",
      "cpus": 2,
      "memory": 1024,
      "vm_name": "freebsd14-aarch64"
    }
  ]
}
