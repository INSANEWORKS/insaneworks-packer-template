{
  "variables": {
    "version": "{{env `VERSION`}}"
  },
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "sudo {{.Vars}} sh {{.Path}}",
      "scripts": [
        "scripts/vagrant.sh",
        "scripts/vmtools.sh",
        "scripts/cleanup.sh",
        "scripts/zerodisk.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "INSANEWORKS-CentOS-8-x86_64-{{user `version`}}-{{.Provider}}.box"
    }
  ],
  "builders": [
    {
      "type": "virtualbox-iso",
      "iso_url": "http://ftp.iij.ad.jp/pub/linux/centos/8/isos/x86_64/CentOS-8.2.2004-x86_64-boot.iso",
      "iso_checksum": "sha256:c67876a5602faa17f68b40ccf2628799b87454aa67700f0f57eec15c6ccdd98c",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_timeout": "10m",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "shutdown_command": "sudo /sbin/halt -p",
      "disk_size": "100000",
      "hard_drive_interface": "sata",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "RedHat_64",
      "headless": "true",
      "http_directory": "http",
      "cpus": 2,
      "memory": 1024
    },
    {
      "type": "vmware-iso",
      "iso_url": "http://ftp.iij.ad.jp/pub/linux/centos/8/isos/x86_64/CentOS-8.2.2004-x86_64-boot.iso",
      "iso_checksum": "sha256:c67876a5602faa17f68b40ccf2628799b87454aa67700f0f57eec15c6ccdd98c",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_timeout": "10m",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "shutdown_command": "sudo /sbin/halt -p",
      "disk_size": "100000",
      "tools_upload_flavor": "linux",
      "guest_os_type": "centos-64",
      "headless": "true",
      "http_directory": "http",
      "vmx_remove_ethernet_interfaces": "true",
      "cpus": 2,
      "memory": 1024
    }
  ]
}
