{
  "variables": {
    "version": "{{env `VERSION`}}"
  },
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "sudo {{.Vars}} sh {{.Path}}",
      "scripts": [
        "scripts/vagrant.sh",
        "scripts/vmtools.sh",
        "scripts/cleanup.sh",
        "scripts/zerodisk.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "INSANEWORKS-FreeBSD-13-x86_64-{{user `version`}}-{{.Provider}}.box",
      "vagrantfile_template": "Vagrantfile.rb"
    }
  ],
  "builders": [
    {
      "type": "virtualbox-iso",
      "iso_url": "http://ftp.iij.ad.jp/pub/FreeBSD/releases/ISO-IMAGES/13.1/FreeBSD-13.1-RELEASE-amd64-bootonly.iso",
      "iso_checksum": "sha256:02e77c57bd0a306e3fc92296b3640433a3bd7e4ba39d82db94dfd885f5bb1f78",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_timeout": "10m",
      "boot_command": [
        "<enter><wait10><wait10><tab><enter><wait>mkdir /tmp/etc && mount -t unionfs /tmp/etc /etc && rm /etc/resolv.conf && dhclient em0 && fetch -o /tmp/fetch.sh http://{{.HTTPIP}}:{{.HTTPPort}}/fetch.sh && sh /tmp/fetch.sh && fetch -o /tmp/bsdinstallscript http://{{.HTTPIP}}:{{.HTTPPort}}/bsdinstallscript && bsdinstall script /tmp/bsdinstallscript<enter>"
      ],
      "shutdown_command": "sudo /sbin/halt -p",
      "disk_size": "100000",
      "hard_drive_interface": "scsi",
      "guest_os_type": "FreeBSD_64",
      "headless": "true",
      "http_directory": "http",
      "cpus": 2,
      "memory": 1024
    },
    {
      "type": "vmware-iso",
      "iso_url": "http://ftp.iij.ad.jp/pub/FreeBSD/releases/ISO-IMAGES/13.1/FreeBSD-13.1-RELEASE-amd64-bootonly.iso",
      "iso_checksum": "sha256:02e77c57bd0a306e3fc92296b3640433a3bd7e4ba39d82db94dfd885f5bb1f78",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_timeout": "10m",
      "boot_command": [
        "<enter><wait10><wait10><tab><enter><wait>mkdir /tmp/etc && mount -t unionfs /tmp/etc /etc && rm /etc/resolv.conf && dhclient em0 && fetch -o /tmp/fetch.sh http://{{.HTTPIP}}:{{.HTTPPort}}/fetch.sh && sh /tmp/fetch.sh && fetch -o /tmp/bsdinstallscript http://{{.HTTPIP}}:{{.HTTPPort}}/bsdinstallscript && bsdinstall script /tmp/bsdinstallscript<enter>"
      ],
      "shutdown_command": "sudo /sbin/halt -p",
      "disk_size": "100000",
      "guest_os_type": "freeBSD-64",
      "headless": "true",
      "http_directory": "http",
      "vmx_remove_ethernet_interfaces": "true",
      "cpus": 2,
      "memory": 1024
    }
  ]
}
